<p id="notice"><%= notice %></p>

<h1>Walks</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Date</th>
      <th>Distance</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @walks.each do |walk| %>
      <tr>
        <td><%= walk.client.name %></td>
        <td><%= walk.datetime.strftime("%A, %y %B %Y") %></td>
        <td><%= walk.distance %> km</td>
        <td><%= number_to_currency(walk.price(3.40), precision: 2) %></td>
        <td><%= link_to 'Show', walk %></td>
        <td><%= link_to 'Edit', edit_walk_path(walk) %></td>
        <td><%= link_to 'Destroy', walk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Walk', new_walk_path %>
